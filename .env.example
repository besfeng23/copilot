# Firebase (client) - safe to expose in browser
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin (server-only) - do NOT expose to client
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
# IMPORTANT: store as a single line with \n escapes
FIREBASE_ADMIN_PRIVATE_KEY=
# Recommended for voice upload/download via Firebase Admin Storage
FIREBASE_STORAGE_BUCKET=

# Optional: used by /app/api/copilot/next
OPENAI_API_KEY=
# Optional: used by /api/projects/[id]/plan/generate and /api/projects/[id]/voice/convert-to-plan
OPENAI_PLAN_MODEL=gpt-4.1-mini
# Optional: used by /api/projects/[id]/voice/transcribe
OPENAI_TRANSCRIBE_MODEL=whisper-1

