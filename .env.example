# Copy to .env.local (do NOT commit .env.local)

# Firebase client (safe to expose; used in browser bundle)
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="YOUR_AUTH_DOMAIN"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="YOUR_STORAGE_BUCKET"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="YOUR_MESSAGING_SENDER_ID"
NEXT_PUBLIC_FIREBASE_APP_ID="YOUR_APP_ID"

# Firebase Admin (server-only) - do NOT expose to client
# Preferred single var (paste full service account JSON as a string):
FIREBASE_SERVICE_ACCOUNT_JSON=""

# Split vars (accepted compatibility variants):
FIREBASE_ADMIN_PROJECT_ID=""
FIREBASE_ADMIN_CLIENT_EMAIL=""
# IMPORTANT: store as a single line with literal \n escapes
FIREBASE_ADMIN_PRIVATE_KEY=""
FIREBASE_SERVICE_ACCOUNT_PROJECT_ID=""
FIREBASE_SERVICE_ACCOUNT_CLIENT_EMAIL=""
FIREBASE_SERVICE_ACCOUNT_PRIVATE_KEY=""

# Recommended for voice upload/download via Firebase Admin Storage
FIREBASE_STORAGE_BUCKET=""

# OpenAI (server-only; only required for OpenAI-backed features)
OPENAI_API_KEY=""
OPENAI_PLAN_MODEL="gpt-4.1-mini"
OPENAI_TRANSCRIBE_MODEL="whisper-1"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"